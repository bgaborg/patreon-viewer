{
    "name": "patreon-post-viewer",
    "version": "1.0.0",
    "description": "A web application to view downloaded Patreon posts",
    "main": "server.ts",
    "scripts": {
        "build:client": "esbuild client/home.ts client/post.ts client/download.ts --outdir=public/js --bundle --minify --target=es2020",
        "prestart": "pnpm build:client",
        "start": "tsx server.ts",
        "predev": "pnpm build:client",
        "dev": "nodemon -e ts,json,handlebars -w . -w ../download-orchestrator.ts -w client/ --exec \"pnpm build:client && tsx server.ts\""
    },
    "dependencies": {
        "archiver": "^7.0.1",
        "express": "^4.18.2",
        "express-handlebars": "^7.1.2",
        "fs-extra": "^11.1.1",
        "moment": "^2.29.4"
    },
    "devDependencies": {
        "@types/archiver": "^7.0.0",
        "@types/express": "^5.0.6",
        "@types/fs-extra": "^11.0.4",
        "esbuild": "^0.27.3",
        "nodemon": "^3.0.1"
    },
    "keywords": [
        "patreon",
        "posts",
        "viewer"
    ],
    "author": "",
    "license": "ISC"
}
