<div class="row mb-4">
    <div class="col-12">
        <div class="card stats-card">
            <div class="card-body text-center">
                <h1 class="card-title mb-3">
                    <i class="fas fa-guitar me-2"></i>
                    Patreon Posts
                </h1>
                <p class="card-text fs-5">
                    <i class="fas fa-file-alt me-2"></i>
                    Total Posts: <strong>{{totalPosts}}</strong>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row mb-3">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
            <h2>All Posts</h2>
            <div class="d-flex gap-2">
                {{#if creators.length}}
                <select class="form-select" id="creatorFilter" style="width: 220px;" onchange="window.location.href = this.value ? '/?creator=' + encodeURIComponent(this.value) : '/'">
                    <option value="">All Creators</option>
                    {{#each creators}}
                    <option value="{{dir}}" {{#eq dir ../selectedCreator}}selected{{/eq}}>{{displayName}}</option>
                    {{/each}}
                </select>
                {{/if}}
                <div class="input-group" style="width: 300px;">
                    <input type="text" class="form-control" id="searchInput" placeholder="Search posts...">
                    <span class="input-group-text">
                        <i class="fas fa-search"></i>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" id="postsContainer">
    {{#each posts}}
    <div class="col-lg-6 col-xl-4 mb-4 post-item" data-search="{{title}} {{teaser}} {{type}} {{creatorDir}}">
        <div class="card post-card h-100">
            {{#if hasThumbnail}}
            <img src="/media/{{creatorDir}}/{{dirName}}/post_info/thumbnail.jpg" class="card-img-top post-image-clickable" style="height: 200px; object-fit: cover; cursor: pointer;" alt="{{title}}" data-post-id="{{id}}">
            {{else if hasCoverImage}}
            <img src="/media/{{creatorDir}}/{{dirName}}/post_info/cover-image.jpg" class="card-img-top post-image-clickable" style="height: 200px; object-fit: cover; cursor: pointer;" alt="{{title}}" data-post-id="{{id}}">
            {{else}}
            <div class="card-img-top d-flex align-items-center justify-content-center bg-secondary text-white post-image-clickable" style="height: 200px; cursor: pointer;" data-post-id="{{id}}">
                <i class="fas fa-image fa-3x"></i>
            </div>
            {{/if}}

            <div class="card-body d-flex flex-column">
                <div class="mb-2">
                    {{#if type}}
                    <span class="badge bg-primary badge-custom me-2">
                        {{#eq type "video_embed"}}
                            <i class="fas fa-video me-1"></i>Video
                        {{else}}
                            <i class="fas fa-file me-1"></i>{{type}}
                        {{/eq}}
                    </span>
                    {{/if}}

                    {{#if likeCount}}
                    <span class="badge bg-success badge-custom me-2">
                        <i class="fas fa-heart me-1"></i>{{likeCount}}
                    </span>
                    {{/if}}

                    {{#if commentCount}}
                    <span class="badge bg-info badge-custom">
                        <i class="fas fa-comment me-1"></i>{{commentCount}}
                    </span>
                    {{/if}}
                </div>

                <h5 class="card-title">{{title}}</h5>

                {{#if teaser}}
                <p class="card-text post-content text-muted">
                    {{truncate (stripHtml teaser) 150}}
                </p>
                {{else if content}}
                <p class="card-text post-content text-muted">
                    {{truncate (stripHtml content) 150}}
                </p>
                {{/if}}

                <div class="mt-auto">
                    {{#if published}}
                    <p class="post-meta mb-2">
                        <i class="fas fa-calendar me-1"></i>
                        {{formatDate published}}
                    </p>
                    {{/if}}

                    {{#if attachments.length}}
                    <p class="post-meta mb-2">
                        <i class="fas fa-paperclip me-1"></i>
                        {{attachments.length}} attachment(s)
                    </p>
                    {{/if}}

                    {{#if embedFiles.length}}
                    <p class="post-meta mb-2">
                        <i class="fas fa-play me-1"></i>
                        {{embedFiles.length}} embedded file(s)
                    </p>
                    {{/if}}

                    <a href="/post/{{id}}" class="btn btn-primary">
                        <i class="fas fa-eye me-1"></i>
                        View Details
                    </a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>

{{#unless posts.length}}
<div class="text-center py-5">
    <i class="fas fa-exclamation-triangle fa-3x text-muted mb-3"></i>
    <h3 class="text-muted">No posts found</h3>
    <p class="text-muted">There are no posts to display.</p>
</div>
{{/unless}}

<script src="/js/home.js"></script>
